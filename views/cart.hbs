<h1 class="sub-title">Корзина</h1>
<div id="cart">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Количество</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class="btn btn-small js-remove"
                data-id="{{id}}"
                data-csrf="{{@root.csrf}}"
              >Удалить</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
      <input type="hidden" name="_csrf" value="{{csrf}}" />
      <button type="submit" class="btn"> Сделать заказ</button>
    </form>

  {{else}}
    <p class="mini-title">Корзина пуста </p>

    <img
      class="img-logo"
      src="https://lh3.googleusercontent.com/proxy/flQZ5IOQg9z7E2dsxPFN7swdbcPR3uhqlSfbhjT0efclnJDCabGZhIla5D5KyF4afEe_2kWloUvwuTuz8wVKkqX7rFRrYsg"
      alt="logo cart"
    />
  {{/if}}
</div>